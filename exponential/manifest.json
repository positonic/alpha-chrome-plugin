{
    "name": "Exponential Whisper",
    "version": "1.2",
    "description": "A voice dictation extension with local Whisper speech recognition",
    "manifest_version": 3,
    "permissions": [
        "activeTab",
        "scripting",
        "tabs",
        "storage",
        "windows",
        "sidePanel"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "action": {
      "default_icon": {
        "16": "icons/expo-logo-16.png",
        "32": "icons/expo-logo-32.png",
        "48": "icons/expo-logo-48.png",
        "128": "icons/expo-logo-128.png"
      }
    },
    "icons": {
      "16": "icons/expo-logo-16.png",
      "32": "icons/expo-logo-32.png",
      "48": "icons/expo-logo-48.png",
      "128": "icons/expo-logo-128.png"
    },
    "side_panel": {
      "default_path": "sidepanel.html"
    },
    "background": {
      "service_worker": "background.js",
      "type": "module"
    },
    "content_security_policy": {
        "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'; media-src 'self' https: http:"
    },
    "commands": {
        "toggle-annotation": {
            "suggested_key": {
                "default": "Ctrl+Shift+D",
                "mac": "Command+Shift+D"
            },
            "description": "Toggle drawing mode for annotations"
        }
    },
    "web_accessible_resources": [{
        "resources": [
          "annotation-overlay.js",
          "dictation.html",
          "dictation.js",
          "sidepanel.html",
          "sidepanel.js",
          "speech-engine-google.js",
          "speech-engine-whisper.js",
          "whisper-worker.bundle.js",
          "audio-processor.js",
          "ort-wasm-simd-threaded.jsep.mjs",
          "ort-wasm-simd-threaded.jsep.wasm",
          "ort-wasm-simd-threaded.mjs",
          "ort-wasm-simd-threaded.wasm",
          "permissions.html",
          "permissions.js",
          "config.js",
          "icons/*"
        ],
        "matches": ["<all_urls>"]
    }]
}
