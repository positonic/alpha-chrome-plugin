{
    "name": "Alpha Trader",
    "version": "1.0",
    "description": "A voice dictation extension that allows continuous dictation in a detached window",
    "manifest_version": 3,
    "permissions": [
        "activeTab",
        "scripting",
        "tabs",
        "storage"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "action": {
      "default_popup": "popup.html"
    },
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self'; media-src 'self' https: http:"
    },
    "web_accessible_resources": [{
        "matches": ["<all_urls>"]
    }]
}