{
    "name": "Alpha Whisper",
    "version": "1.1",
    "description": "A voice dictation extension that allows continuous dictation in a detached window",
    "manifest_version": 3,
    "permissions": [
        "activeTab",
        "scripting",
        "tabs",
        "storage",
        "windows"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "expo-logo-16.png",
        "32": "expo-logo-32.png",
        "48": "expo-logo-48.png",
        "128": "expo-logo-128.png"
      }
    },
    "icons": {
      "16": "expo-logo-16.png",
      "32": "expo-logo-32.png",
      "48": "expo-logo-48.png",
      "128": "expo-logo-128.png"
    },
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self'; media-src 'self' https: http:"
    },
    "web_accessible_resources": [{
        "resources": [
          "dictation.html",
          "dictation.js",
          "timeout.mp3",
          "shutter.mp3"
        ],
        "matches": ["<all_urls>"]
    }]
}